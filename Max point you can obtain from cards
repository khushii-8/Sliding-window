class Solution {
public:
    int maxScore(vector<int>& cardPoints, int k) {
        int n = cardPoints.size();
        int lsum = 0, rsum = 0, maxsum = 0, rindex = n - 1;

        // take all k cards from the left
        for(int i = 0; i < k; i++) 
            lsum += cardPoints[i];
        
        if(n == k) return lsum; // edge case: take all cards
        maxsum = lsum;

        // replace left cards with right cards one by one
        for(int i = k - 1; i >= 0; i--) {
            lsum -= cardPoints[i];
            rsum += cardPoints[rindex];
            rindex--;
            maxsum = max(maxsum, lsum + rsum);
        }
        return maxsum;
    }
};
