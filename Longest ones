class Solution {
public:
    int longestOnes(vector<int>& nums, int k) {
        int n = nums.size();
        int right=0,left=0;
        int maxi = 0;
        vector<int>mpp(2,0);
        while(right<n){
            mpp[nums[right]]++;
            while(mpp[0]>k){
                if(nums[left]==0)mpp[nums[left]]--;
                left++;
            }
            maxi = max(maxi,right-left+1);
            right++;
        }
        return maxi;
    }
};
